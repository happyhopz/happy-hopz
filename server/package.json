{
  "name": "happy-hopz-server",
  "version": "1.0.0",
  "description": "Backend API for Happy Hopz E-Commerce",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:migrate": "npx prisma generate && npx prisma db push --accept-data-loss --skip-generate && tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "tsx src/seed.ts",
    "postinstall": "prisma generate",
    "postbuild": "echo 'Build complete. Remember to run: npx prisma db push'"
  },
  "keywords": [
    "ecommerce",
    "api",
    "kids-footwear"
  ],
  "author": "Happy Hopz",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.13",
    "razorpay": "^2.9.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.16.5",
    "@types/nodemailer": "^7.0.9",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}