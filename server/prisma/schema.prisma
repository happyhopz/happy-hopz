generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

model User {
  id                 String          @id @default(uuid())
  email              String          @unique
  password           String
  role               String          @default("USER")
  name               String?
  phone              String?
  isVerified         Boolean         @default(false)
  verificationCode   String?
  codeExpires        DateTime?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @default(now()) @updatedAt
  emailNotifications Boolean         @default(true)
  promoNotifications Boolean         @default(true)
  resetExpires       DateTime?
  resetToken         String?
  points             Int             @default(0)
  isGuest            Boolean         @default(false)
  refreshToken                String?
  whatsappOrderNotifications  Boolean         @default(true)
  whatsappPromoNotifications  Boolean         @default(true)
  addresses                   Address[]
  cartItems                   CartItem[]
  notifications               Notification[]
  orders                      Order[]
  returnRequests              ReturnRequest[]
  reviews                     Review[]
}


model Notification {
  id        String   @id @default(uuid())
  userId    String?
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  isAdmin   Boolean  @default(false)
  metadata  String?
  priority  String   @default("NORMAL")
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id             String      @id @default(uuid())
  name           String
  description    String
  price          Float
  discountPrice  Float?
  category       String
  ageGroup       String
  sizes          String
  colors         String
  stock          Int
  inventory      String      @default("[]")
  images         String
  status         String      @default("ACTIVE")
  tags           String      @default("[]")
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  costPrice      Float?
  isVariant      Boolean     @default(false)
  parentId       String?
  seoDescription String?
  seoTitle       String?
  sku            String?     @unique
  boxPrice       Float?
  otherCosts     Float?
  shippingCost   Float?
  tagPrice       Float?
  cartItems      CartItem[]
  orderItems     OrderItem[]
  avgRating      Float       @default(4.5)
  ratingCount    Int         @default(0)
  reviews        Review[]
}

model CartItem {
  id        String   @id @default(uuid())
  userId    String
  productId String
  quantity  Int
  size      String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, size, color])
}

model Order {
  id                 String          @id @default(uuid())
  orderId            String?         @unique // Format: HHZ-YYYYMMDD-XXXX
  userId             String?
  total              Float
  status             String          @default("PENDING") // Pending, Confirmed, Processing, Shipped, Out for Delivery, Delivered, Cancelled, Refunded
  paymentStatus      String          @default("PENDING")
  paymentMethod      String?         @default("ONLINE")
  transactionId      String?
  trackingNumber     String?
  courierPartner     String?
  estimatedDelivery  DateTime?
  addressId          String
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @default(now()) @updatedAt
  source             String          @default("ONLINE")
  guestEmail         String?
  guestName          String?
  guestPhone         String?
  shipping           Float?
  subtotal           Float?
  tax                Float?
  cancellationReason String?
  returnReason       String?
  returnStatus       String?
  couponCode         String?
  couponDiscount     Float?          @default(0)
  couponId           String?
  emailSent          Boolean         @default(false)
  whatsappSent       Boolean         @default(false)
  statusHistory      Json?           // Array of {status, updatedAt, updatedBy}
  address            Address         @relation(fields: [addressId], references: [id])
  user               User?           @relation(fields: [userId], references: [id])
  items              OrderItem[]
  returnRequests     ReturnRequest[]
  notificationLogs   NotificationLog[]
  couponUsage        CouponUsage?
}

model NotificationLog {
  id           String   @id @default(uuid())
  orderId      String
  type         String   // email, whatsapp
  triggerType  String   // order_created, status_updated, resend
  status       String   // success, failed
  errorMessage String?
  createdAt    DateTime @default(now())
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int
  size      String
  color     String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}

model Address {
  id      String  @id @default(uuid())
  userId  String?
  name    String
  phone   String
  line1   String
  line2   String?
  city    String
  state   String
  pincode String
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders  Order[]
}

model Coupon {
  id            String        @id @default(uuid())
  code          String        @unique
  discountType  String
  discountValue Float
  minOrderValue Float?
  expiryDate    DateTime?
  maxUses       Int?
  currentUses   Int           @default(0)
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  firstTimeOnly Boolean       @default(false)
  usages        CouponUsage[]
}

model CouponReservation {
  id         String   @id @default(uuid())
  couponCode String
  userId     String?
  userEmail  String?
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@index([couponCode, userId])
  @@index([couponCode, userEmail])
  @@index([expiresAt])
}

model CouponUsage {
  id        String   @id @default(uuid())
  couponId  String
  userId    String?
  userEmail String?
  orderId   String   @unique
  createdAt DateTime @default(now())
  coupon    Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([couponId, userId])
  @@index([couponId, userEmail])
}

model Review {
  id         String   @id @default(uuid())
  productId  String
  userId     String
  rating     Int
  comment    String
  isApproved Boolean  @default(false)
  isFeatured Boolean  @default(false)
  createdAt  DateTime @default(now())
  images     String?
  recommend  Boolean  @default(true)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId])
}

model SiteSettings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  type      String   @default("string")
  updatedAt DateTime @updatedAt
}

model SiteContent {
  id        String   @id @default(uuid())
  key       String   @unique
  content   String
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  entity    String
  entityId  String?
  details   String?
  adminId   String?
  createdAt DateTime @default(now())
}

model ContactForm {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String
  message   String
  status    String   @default("UNREAD")
  createdAt DateTime @default(now())
}

model FlashSale {
  id            String   @id @default(uuid())
  name          String
  discountValue Float
  discountType  String   @default("PERCENTAGE")
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model MarketingPopup {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  link      String?
  type      String   @default("NEWSLETTER")
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ReturnRequest {
  id              String       @id @default(uuid())
  orderId         String
  userId          String
  type            String
  status          String       @default("PENDING")
  reason          String
  comments        String?
  itemsTotal      Float
  pickupCharge    Float        @default(50)
  refundAmount    Float?
  refundMethod    String?
  refundStatus    String?
  exchangeOrderId String?
  exchangeItems   String?
  pickupScheduled DateTime?
  pickupAddress   String?
  trackingNumber  String?
  adminNotes      String?
  processedBy     String?
  processedAt     DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  items           ReturnItem[]
  order           Order        @relation(fields: [orderId], references: [id])
  user            User         @relation(fields: [userId], references: [id])
}

model ReturnItem {
  id              String        @id @default(uuid())
  returnRequestId String
  orderItemId     String
  productId       String
  productName     String
  quantity        Int
  price           Float
  size            String
  color           String
  reason          String
  condition       String?
  images          String?
  createdAt       DateTime      @default(now())
  returnRequest   ReturnRequest @relation(fields: [returnRequestId], references: [id], onDelete: Cascade)
}
