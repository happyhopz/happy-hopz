// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  role          String         @default("USER") // USER or ADMIN
  name          String?
  phone         String?
  addresses     Address[]
  orders        Order[]
  cartItems     CartItem[]
  reviews       Review[]
  notifications Notification[]
  isVerified       Boolean        @default(false)
  verificationCode String?
  codeExpires      DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now()) @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   // e.g., 'ORDER_STATUS', 'PROMOTION'
  orderId   String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String
  price         Float
  discountPrice Float?
  category      String
  ageGroup      String
  sizes         String   // JSON string: ["S", "M", "L"]
  colors        String   // JSON string: ["Red", "Blue"]
  stock         Int
  images        String   // JSON string: ["url1", "url2"]
  status        String   @default("ACTIVE")
  tags          String   @default("[]") // JSON string: ["New Arrivals", "Trending"]
  reviews       Review[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model CartItem {
  id        String  @id @default(uuid())
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  quantity  Int
  size      String
  color     String
  createdAt DateTime @default(now())

  @@unique([userId, productId, size, color])
}

model Order {
  id             String      @id @default(uuid())
  userId         String
  user           User        @relation(fields: [userId], references: [id])
  items          OrderItem[]
  total          Float
  status         String      @default("PLACED") // PLACED, PACKED, SHIPPED, DELIVERED, CANCELLED
  paymentStatus  String      @default("PENDING") // PENDING, COMPLETED, FAILED
  trackingNumber String?     // Shipping tracking number
  addressId      String
  address        Address     @relation(fields: [addressId], references: [id])
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @default(now()) @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  name      String
  price     Float
  quantity  Int
  size      String
  color     String
}

model Address {
  id      String @id @default(uuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name    String
  phone   String
  line1   String
  line2   String?
  city    String
  state   String
  pincode String
  orders  Order[]
}

model Coupon {
  id              String   @id @default(uuid())
  code            String   @unique
  discountType    String   // "PERCENTAGE" | "FLAT"
  discountValue   Float
  minOrderValue   Float?
  expiryDate      DateTime?
  maxUses         Int?
  currentUses     Int      @default(0)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}

model Review {
  id          String   @id @default(uuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating      Int      // 1-5
  comment     String
  isApproved  Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  @@unique([productId, userId])
}

model SiteContent {
  id            String   @id @default(uuid())
  key           String   @unique // "hero_banner", "about_us", etc.
  content       String   // JSON string
  updatedAt     DateTime @updatedAt
}
