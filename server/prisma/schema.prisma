generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

model User {
  id                 String          @id @default(uuid())
  email              String          @unique
  password           String
  role               String          @default("USER")
  name               String?
  phone              String?
  isVerified         Boolean         @default(false)
  verificationCode   String?
  codeExpires        DateTime?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @default(now()) @updatedAt
  emailNotifications Boolean         @default(true)
  promoNotifications Boolean         @default(true)
  resetExpires       DateTime?
  resetToken         String?
  points             Int             @default(0)
  isGuest            Boolean         @default(false)
  refreshToken       String?
  addresses          Address[]
  cartItems          CartItem[]
  notifications      Notification[]
  orders             Order[]
  reviews            Review[]
  returnRequests     ReturnRequest[]
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String
  orderId   String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id             String      @id @default(uuid())
  name           String
  description    String
  price          Float
  discountPrice  Float?
  category       String
  ageGroup       String
  sizes          String
  colors         String
  stock          Int
  images         String
  status         String      @default("ACTIVE")
  tags           String      @default("[]")
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  costPrice      Float?
  boxPrice       Float? // Packaging cost per unit
  tagPrice       Float? // Tag/sticker cost per unit
  shippingCost   Float? // Shipping cost per unit
  otherCosts     Float? // Miscellaneous costs per unit
  isVariant      Boolean     @default(false)
  parentId       String?
  seoDescription String?
  seoTitle       String?
  sku            String?     @unique
  cartItems      CartItem[]
  orderItems     OrderItem[]
  reviews        Review[]
}

model CartItem {
  id        String   @id @default(uuid())
  userId    String
  productId String
  quantity  Int
  size      String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, size, color])
}

model Order {
  id                 String          @id @default(uuid())
  userId             String?
  total              Float
  status             String          @default("PLACED")
  paymentStatus      String          @default("PENDING")
  trackingNumber     String?
  addressId          String
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @default(now()) @updatedAt
  source             String          @default("ONLINE")
  guestEmail         String?
  guestName          String?
  guestPhone         String?
  shipping           Float?
  subtotal           Float?
  tax                Float?
  cancellationReason String?
  returnReason       String?
  returnStatus       String?
  couponId           String?
  couponCode         String?
  couponDiscount     Float?          @default(0)
  address            Address         @relation(fields: [addressId], references: [id])
  user               User?           @relation(fields: [userId], references: [id])
  items              OrderItem[]
  returnRequests     ReturnRequest[]
  couponUsage        CouponUsage?
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int
  size      String
  color     String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}

model Address {
  id      String  @id @default(uuid())
  userId  String?
  name    String
  phone   String
  line1   String
  line2   String?
  city    String
  state   String
  pincode String
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders  Order[]
}

model Coupon {
  id            String        @id @default(uuid())
  code          String        @unique
  discountType  String
  discountValue Float
  minOrderValue Float?
  expiryDate    DateTime?
  maxUses       Int?
  currentUses   Int           @default(0)
  isActive      Boolean       @default(true)
  firstTimeOnly Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  usages        CouponUsage[]
}

model CouponReservation {
  id         String   @id @default(uuid())
  couponCode String
  userId     String?
  userEmail  String?
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@index([couponCode, userId])
  @@index([couponCode, userEmail])
  @@index([expiresAt])
}

model CouponUsage {
  id        String   @id @default(uuid())
  couponId  String
  userId    String?
  userEmail String?
  orderId   String   @unique
  createdAt DateTime @default(now())

  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)
  order  Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([couponId, userId])
  @@index([couponId, userEmail])
}

model Review {
  id         String   @id @default(uuid())
  productId  String
  userId     String
  rating     Int
  comment    String
  isApproved Boolean  @default(false)
  isFeatured Boolean  @default(false)
  createdAt  DateTime @default(now())
  images     String?
  recommend  Boolean  @default(true)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId])
}

model SiteSettings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  type      String   @default("string") // "string", "number", "boolean"
  updatedAt DateTime @updatedAt
}

model SiteContent {
  id        String   @id @default(uuid())
  key       String   @unique
  content   String
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  entity    String
  entityId  String?
  details   String?
  adminId   String?
  createdAt DateTime @default(now())
}

model ContactForm {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String
  message   String
  status    String   @default("UNREAD")
  createdAt DateTime @default(now())
}

model FlashSale {
  id            String   @id @default(uuid())
  name          String
  discountValue Float
  discountType  String   @default("PERCENTAGE")
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model MarketingPopup {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  link      String?
  type      String   @default("NEWSLETTER")
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ReturnRequest {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])
  userId  String
  user    User   @relation(fields: [userId], references: [id])

  type     String // 'RETURN' or 'EXCHANGE'
  status   String  @default("PENDING") // PENDING, APPROVED, REJECTED, COMPLETED, CANCELLED
  reason   String
  comments String?

  items ReturnItem[]

  // Pricing
  itemsTotal   Float // Total value of returned items
  pickupCharge Float  @default(50) // ₹50 for returns, ₹0 for exchanges
  refundAmount Float? // itemsTotal - pickupCharge (for returns)

  refundMethod String? // 'ORIGINAL_PAYMENT', 'BANK_TRANSFER', 'STORE_CREDIT'
  refundStatus String? // 'PENDING', 'PROCESSED', 'FAILED'

  // Exchange specific
  exchangeOrderId String? // New order created for exchange
  exchangeItems   String? // JSON array of exchange items

  pickupScheduled DateTime?
  pickupAddress   String?
  trackingNumber  String?

  adminNotes  String?
  processedBy String?
  processedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReturnItem {
  id              String        @id @default(uuid())
  returnRequestId String
  returnRequest   ReturnRequest @relation(fields: [returnRequestId], references: [id], onDelete: Cascade)

  orderItemId String
  productId   String
  productName String
  quantity    Int
  price       Float
  size        String
  color       String

  reason    String
  condition String? // 'UNUSED', 'USED', 'DAMAGED'
  images    String? // JSON array of image URLs

  createdAt DateTime @default(now())
}
